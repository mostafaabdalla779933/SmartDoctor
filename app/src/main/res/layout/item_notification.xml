<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@drawable/bg_rounded_notification"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_new_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New message!"
        android:textSize="17sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/primary_color"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_doctor"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="24dp"
        android:background="@color/light_blue_900"
        app:shapeAppearance="@style/circleImageView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_new_message"
        app:layout_constraintTop_toBottomOf="@+id/tv_new_message"/>

    <TextView
        android:id="@+id/tv_doctor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Doctor name"
        android:textSize="15sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#ABABAB"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/iv_doctor"
        app:layout_constraintStart_toEndOf="@+id/iv_doctor"
        app:layout_constraintBottom_toBottomOf="@+id/iv_doctor"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="09:58PM, 24 OCT 2023"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#ABABAB"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>