<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".feature.specialties.AddSpecialtiesFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        app:navigationIcon="@drawable/iv_back"
        app:title="Add specialties"
        app:titleCentered="true"
        app:titleTextColor="#FFFFFF" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specialty photo"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="21dp"
        android:textColor="#B1B1B1"
        android:textSize="15sp"/>
    
    
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/ivAddImage"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="8dp"
        android:background="#2676CCD3"
        android:src="@drawable/icon_add_image"
        android:scaleType="centerInside"
        app:shapeAppearance="@style/RoundedImageView.10dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specialties name"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="21dp"
        android:textColor="#B1B1B1"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/etName"
        style="@style/EditText.edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="name"
        android:layout_marginHorizontal="15dp"
        android:inputType="text"
        android:padding="14dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAdd"
        style="@style/roundedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_bold"
        android:paddingVertical="15dp"
        android:layout_marginHorizontal="15dp"
        android:text="Add"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="4dp" />





</androidx.appcompat.widget.LinearLayoutCompat>