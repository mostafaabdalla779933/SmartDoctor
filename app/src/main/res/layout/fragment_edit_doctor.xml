<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".feature.edit_doctor.EditDoctorFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Doctor photo"
            android:textColor="@color/grey_darker"
            android:textSize="16sp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_doctor"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:background="#2676CCD3"
            android:scaleType="centerInside"
            android:src="@drawable/add"
            app:shapeAppearance="@style/RoundedImageView.5p" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Doctor name"
            android:textColor="@color/grey_darker"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_name"
            style="@style/EditText.edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:hint="name"
            android:inputType="text"
            android:padding="14dp" />

        <EditText
            android:id="@+id/et_bio"
            style="@style/EditText.edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:gravity="top|start"
            android:hint="Bio"
            android:inputType="textMultiLine"
            android:lines="4"
            android:padding="14dp" />

        <EditText
            android:id="@+id/et_job_number"
            style="@style/EditText.edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:hint="Job number"
            android:inputType="number"
            android:padding="14dp" />

        <Spinner
            android:id="@+id/spinner_specialization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_tv_spinner"
            android:popupBackground="@color/white" />

        <EditText
            android:id="@+id/et_email"
            style="@style/EditText.edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="14dp" />

        <TextView
            android:id="@+id/tv_birth_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edit_text"
            android:drawableEnd="@drawable/ic_calender"
            android:fontFamily="@font/poppins_regular"
            android:padding="14dp"
            android:text="Birth of date"
            android:textColor="#30003233"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            style="@style/roundedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="24dp"
            android:fontFamily="@font/poppins_bold"
            android:paddingVertical="8dp"
            android:text="Save data"
            android:textSize="18sp"
            app:cornerRadius="4dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>